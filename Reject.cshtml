@model EmployeesLeaveApplication.Models.LeaveApplication

<h2>Reject Leave</h2>

<div class="card p-4 shadow">

    <h4>Are you sure you want to reject this leave?</h4>

    <p><strong>Employee ID:</strong> @Model.EmployeeId</p>
    <p><strong>Leave Type:</strong> @Model.LeaveType</p>
    <p><strong>From:</strong> @Model.FromDate.ToShortDateString()</p>
    <p><strong>To:</strong> @Model.ToDate.ToShortDateString()</p>
    <p><strong>Reason:</strong> @Model.Reason</p>
