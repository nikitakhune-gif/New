@model EmployeesLeaveApplication.Models.LeaveApplication

<h2>Approve Leave</h2>

<div class="card p-4 shadow">

    <h4>Are you sure you want to approve this leave?</h4>
    <p><strong>Employee ID:</strong> @Model.EmployeeId</p>
    <p><strong>Leave Type:</strong> @Model.LeaveType</p>
    <p><strong>From:</strong> @Model.FromDate.ToShortDateString()</p>
    <p><strong>To:</strong> @Model.ToDate.ToShortDateString()</p>
    <p><strong>Reason:</strong> @Model.Reason</p>

    @* <form method="post" asp-action="Approve" asp-route-id="@Model.LeaveID">
        <button type="submit" class="btn btn-success">Approve</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form> *@

    <form asp-action="Approve" method="post">
        <input type="hidden" name="id" value="@Model.LeaveID" />
        <button class="btn btn-success" type="submit">Approve</button>
    </form>
</div>

